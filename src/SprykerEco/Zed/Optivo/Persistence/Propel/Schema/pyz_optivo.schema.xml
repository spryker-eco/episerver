<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          name="zed"
          xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\Optivo\Persistence"
          package="src.Orm.Zed.Optivo.Persistence">

    <table name="spy_optivo_subscription" idMethod="native">
        <column name="email" type="varchar" required="true" primaryKey="true"/>
        <column name="optivo_id" type="varchar" required="true" />
        <column name="fk_customer" type="integer" required="false" />

        <unique name="spy_optivo_subscription-email">
            <unique-column name="email"/>
        </unique>

        <foreign-key name="spy_optivo_subscription-fk_customer" foreignTable="spy_newsletter_subscriber" phpName="NewsletterSubscriber">
            <reference local="fk_customer" foreign="fk_customer"/>
        </foreign-key>
    </table>

</database>
