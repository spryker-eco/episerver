<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd" >

    <transfer name="Mail">
        <property name="optivoMailRequest" type="string" />
    </transfer>

    <transfer name="OptivoSubscribeRequest">
        <property name="bmRecipientId" type="string" />
        <property name="bmOptInId" type="string" />
        <property name="bmOptinFrequencyLimit" type="int" />
        <property name="bmFailOnUnsubscribe" type="int" />
        <property name="bmOverwrite" type="bool" />
        <property name="bmOptinSource" type="string" />
        <property name="bmSanitize" type="bool" />
        <property name="subscriber" type="string" />
    </transfer>

    <transfer name="OptivoUnsubscribeRequest">
        <property name="bmRecipientId" type="string" />
        <property name="bmMailId" type="string" />
        <property name="bmRemoveId" type="int" />
    </transfer>

    <transfer name="OptivoTransactionalMailRequest">
        <property name="bmRecipientId" type="string" />
        <property name="bmMailingId" type="string" />
        <property name="bmPersonalizedAttachmentsToken" type="string" />
        <property name="bmSanitize" type="bool" />
        <property name="subscriber" type="string" />
    </transfer>

    <transfer name="OptivoSubscriber">
        <property name="notUsed" type="string" />
    </transfer>

    <transfer name="OptivoRequest">
        <property name="serviceType" type="string" />
        <property name="mailingListToken" type="string" />
        <property name="requestType" type="string" />
        <property name="parameters" type="array" />
    </transfer>

    <transfer name="OptivoResponse">
        <property name="isSuccessful" type="bool" />
        <property name="status" type="string" />
    </transfer>

</transfers>
